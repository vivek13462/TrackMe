<div class="container">
<h3 class="text-center"><a href="/get-allThreats" class="btn btn-primary">Check All threats Reported</a></h3>
  <table class="table table-bordered">
    <tr>
      <th>Threat Report By</th>    
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Message</th>   
    </tr>
    {{# each items }}
    <tr>
      <td>{{ this.username}}</td>    
      <td>{{ this.location.lat}}</td>
      <td>{{ this.location.lng}}</td>
      <td>{{ this.location.message}}</td>
    </tr>
    {{/each}}
  </table>
</div>
